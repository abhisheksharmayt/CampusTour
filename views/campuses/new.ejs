<% layout('layouts/boilerPlate') %>
    <div class="row ">
        <h1 class="text-center">Add New Campus</h1>
        <div class="col-6 offset-3">
            <form action="/campuses" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="campus_name">Campus Name : </label>
                    <input class="form-control" type="text" id="campus_name" placeholder="campus name"
                        name="campus_name" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                        <input class="form-control" type="text" name="location" id="location" placeholder="location"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="imageUrl">Image Url : </label>
                    <input class="form-control" type="text" name="image" id="imageUrl" placeholder="https://imageURL"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description : </label>
                    <textarea class="form-control" id="description" rows="3" name="description"
                        placeholder="Type something about your campus..." required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campus</button>
                </div>
            </form>
        </div>
    </div>